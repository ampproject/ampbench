{
  "name": "ampbench",
  "version": "1.0.0",
  "description": "AMPBench: AMP URL Validation and Troubleshooting",
  "repository": "https://github.com/ampproject/ampbench",
  "private": true,
  "scripts": {
    "start"    : "node ampbench_main.js",
    "monitor"  : "nodemon --watch . --watch views/index.hbs --watch views/results.hbs --ignore 'validator/*.*'",
    "deploy"   : "gcloud app deploy app.yaml",
    "lint"     : "jshint --exclude-path=../.gitignore .",
    "mocha"    : "mocha test/*.test.js -t 30000",
    "test"     : "npm run lint && npm run mocha"
  },
  "author": "The AMP HTML Authors",
  "license": "Apache Version 2.0",
  "dependencies": {
    "amphtml-validator": "^1.0.12",
    "body-parser": "^1.15.0",
    "cheerio": "^0.20.0",
    "connect-timeout": "^1.7.0",
    "cyborg.txt": "^0.1.0",
    "express": "^4.13.4",
    "follow-redirects": "^0.1.0",
    "graceful-fs": "^4.1.3",
    "handlebars": "^4.0.5",
    "http-status": "^0.2.2",
    "jshint": "^2.9.1",
    "material-design-lite": "^1.1.3",
    "microdata-node": "^0.2.1",
    "mocha": "^2.4.5",
    "node-fetch": "^1.5.3",
    "nodemon": "^1.9.1",
    "promise": "^7.1.1",
    "request": "^2.69.0",
    "serve-favicon": "^2.3.0",
    "string": "^3.3.1",
    "valid-url": "^1.0.9",
    "wget-improved": "^1.3.0"
  },
  "devDependencies": {
    "jshint": "^2.9.1",
    "mocha": "^2.4.5",
    "supertest": "^1.1.0"
  },
  "engines": {
    "node": ">=0.12.7"
  }
}
