{
  "manifest_version": 2,
  "name": "AMP Readiness Tool",
  "description": "See at a glance the various third party vendors on the page and whether they have AMP support.",
  "version": "2.6",
  "options_page": "options.html",
  "icons": {
    "16": "amp-readiness.png",
    "48": "amp-readiness.png",
    "128": "amp-readiness.png"
  },
  "browser_action": {
    "default_icon": "amp-readiness.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "content_script.js"
      ],
      "matches": [
        "<all_urls>"
      ],
      "all_frames": false,
      "run_at": "document_end",
      "exclude_globs": [
        "*.corp.google.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "apps.json"
  ],
  "permissions": [
    "activeTab",
    "<all_urls>",
    "webNavigation",
    "tabs",
    "https://ajax.googleapis.com/",
    "storage",
    "unlimitedStorage"
  ]
}
